<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/polaris__callout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal" >

        <!-- This is where the left accessory is supposed to go -->

        <FrameLayout
            android:id="@+id/polaris__content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" >

            <!-- This is where the custom view is supposed to go -->

            <LinearLayout
                android:id="@+id/polaris__content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/polaris__title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="@style/TextAppearance.Polaris.MapCallout.Title"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/polaris__subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="@style/TextAppearance.Polaris.MapCallout.Subtitle"
                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/polaris__disclosure"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/polaris__arrow_to_right"
            android:visibility="gone" />

        <!-- This is where the right accessory is supposed to go -->

    </LinearLayout>

</merge>